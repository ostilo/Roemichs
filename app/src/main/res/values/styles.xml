<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
    </style>

    <style name="loginButtonCustom" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:height">55dp</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="myButton" parent="Widget.AppCompat.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:height">55dp</item>
        <item name="elevation">4dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="toolbarStyle" parent="android:Theme.Holo.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="edit_text_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="my_edit_text2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/medium</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyStyle.InputLayout2" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/error</item>
    </style>
    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
