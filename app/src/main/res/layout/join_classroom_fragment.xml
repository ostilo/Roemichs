<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrJoinCls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".schoolapp.JoinClassroomFragment">

        <Button
            android:id="@+id/btnJoinClass"
            style="@style/loginButtonCustom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="JOIN CLASSROOM"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constrJin" />

        <ImageView
            android:id="@+id/imgProfileBackJoinCls"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:background="@android:color/darker_gray"
            android:contentDescription="Profile Image"
            android:scaleType="centerCrop"
            android:src="@drawable/landscapeimg"
            android:tint="#6F000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/landscapeimg" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrJin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgProfileBackJoinCls">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardVw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_compat_inset_shadow"
                android:padding="10dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_Session_joinCls"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Session"
                        android:padding="5dp"
                        android:paddingBottom="0dp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/tv_spSession_joinClass"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="0dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:singleLine="true"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_Class_joinClass"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Class"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/tv_spClass_joinClass"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="0dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_Classtype_joinCls"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Class Type"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/tv_spClasstype_joinCls"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="0dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_term_joinCls"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Term"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/txtTerm_JoinCls"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="0dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_week_joinCls"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Week"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/txtWeekJoinCls"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="0dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/loading_items"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="@color/colorPrimary"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>