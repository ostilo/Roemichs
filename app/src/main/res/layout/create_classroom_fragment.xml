<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrCrtCls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".schoolapp.CreateClassroomFragment">

        <Button
            android:id="@+id/btnCreateClass"
            style="@style/loginButtonCustom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="CREATE CLASSROOM"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constr" />

        <ImageView
            android:id="@+id/imgProfileBackCrtCls"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:background="@android:color/darker_gray"
            android:contentDescription="Profile Image"
            android:scaleType="centerCrop"
            android:src="@drawable/landscapeimg"
            android:tint="#6F000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/landscapeimg" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgProfileBackCrtCls">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_compat_inset_shadow"
                android:padding="10dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_Session_crtCls"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Session"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/tv_spSession_crtClass"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="0dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:singleLine="true"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_Class_crtClass"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Class"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/tv_spClass_crtClass"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="0dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_Classtype_crtCls"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Class Type"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/tv_spClasstype_crtCls"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="0dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_term_crtCls"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Term"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/spTerm_CrtClass"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="0dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_week_crtCls"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Week"
                        android:padding="5dp">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/spWeek_crtCls"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="0dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_subject_crtCls"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="7dp"
                        android:padding="5dp"
                        app:startIconDrawable="@drawable/ic_person_black"
                        app:startIconTint="#c9c9c9">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtSubjectCrtCls"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:hint="Subject"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_topic_crtCls"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        app:startIconDrawable="@drawable/ic_person_black"
                        app:startIconTint="#c9c9c9">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtTopic_crtCls"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:ems="10"
                            android:hint="Topic"
                            android:inputType="number"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/frame_duration"
                        style="@style/MyStyle.InputLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        app:startIconDrawable="@drawable/ic_person_black"
                        app:startIconTint="#c9c9c9">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtDuration_crtCls"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:ems="10"
                            android:hint="Duration"
                            android:inputType="textEmailAddress"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/loading_crtCls"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="@color/colorPrimary"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>